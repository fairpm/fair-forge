{
    "name": "fair-forge/static-checks-security-info",
    "description": "Check WordPress packages for security contact headers and files",
    "type": "library",
    "license": "MIT",
    "repositories": [
        {
            "type": "path",
            "url": "../shared"
        }
    ],
    "require": {
        "php": ">=8.1",
        "ext-curl": "*",
        "fair-forge/shared": "@dev"
    },
    "autoload": {
        "psr-4": {
            "FairForge\\Tools\\SecurityInfo\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "FairForge\\Tools\\SecurityInfo\\Tests\\": "tests/"
        }
    },
    "bin": [
        "bin/security-info"
    ],
    "require-dev": {
        "phpunit/phpunit": "^10.0",
        "squizlabs/php_codesniffer": "^3.7"
    },
    "scripts": {
        "lint": "phpcs",
        "lint:fix": "phpcbf",
        "test": "phpunit",
        "check": [
            "@lint",
            "@test"
        ]
    }
}
