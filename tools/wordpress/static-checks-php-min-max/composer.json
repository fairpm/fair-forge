{
    "name": "fair-forge/static-checks-php-min-max",
    "description": "Determine minimum and maximum PHP version compatibility for PHP packages using PHPCompatibility",
    "type": "library",
    "license": "MIT",
    "repositories": [
        {
            "type": "path",
            "url": "../shared"
        }
    ],
    "require": {
        "php": ">=8.1",
        "ext-curl": "*",
        "fair-forge/shared": "@dev",
        "squizlabs/php_codesniffer": "^3.7",
        "phpcompatibility/php-compatibility": "^9.3"
    },
    "autoload": {
        "psr-4": {
            "FairForge\\Tools\\PhpMinMax\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "FairForge\\Tools\\PhpMinMax\\Tests\\": "tests/"
        }
    },
    "bin": [
        "bin/php-min-max"
    ],
    "config": {
        "allow-plugins": {
            "dealerdirect/phpcodesniffer-composer-installer": true
        }
    },
    "require-dev": {
        "dealerdirect/phpcodesniffer-composer-installer": "^1.0",
        "phpunit/phpunit": "^10.0"
    },
    "scripts": {
        "lint": "phpcs",
        "lint:fix": "phpcbf",
        "test": "phpunit",
        "check": [
            "@lint",
            "@test"
        ]
    }
}
