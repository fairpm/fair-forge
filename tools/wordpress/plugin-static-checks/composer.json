{
    "name": "fair-forge/plugin-static-checks",
    "description": "WordPress plugin ZIP scanner using PHPCS with WordPress coding standards",
    "type": "library",
    "license": "MIT",
    "require": {
        "php": ">=8.3",
        "ext-curl": "*",
        "squizlabs/php_codesniffer": "^3.7",
        "wp-coding-standards/wpcs": "^3.0",
        "phpcsstandards/phpcsutils": "^1.0",
        "phpcsstandards/phpcsextra": "^1.0",
        "nelexa/zip": "^4.0"
    },
    "autoload": {
        "psr-4": {
            "FairForge\\Tools\\WordPress\\PluginStaticChecks\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "FairForge\\Tools\\WordPress\\PluginStaticChecks\\Tests\\": "tests/"
        }
    },
    "bin": [
        "bin/plugin-static-checks"
    ],
    "config": {
        "allow-plugins": {
            "dealerdirect/phpcodesniffer-composer-installer": true
        }
    },
    "require-dev": {
        "dealerdirect/phpcodesniffer-composer-installer": "^1.0",
        "phpunit/phpunit": "^10.0",
        "friendsofphp/php-cs-fixer": "^3.0"
    },
    "scripts": {
        "lint": "phpcs",
        "lint:fix": "phpcbf",
        "format": "php-cs-fixer fix",
        "format:check": "php-cs-fixer fix --dry-run --diff",
        "test": "phpunit",
        "check": [
            "@lint",
            "@format:check",
            "@test"
        ]
    }
}
