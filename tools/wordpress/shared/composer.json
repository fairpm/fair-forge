{
    "name": "fair-forge/shared",
    "description": "Shared utilities for FairForge tools",
    "type": "library",
    "license": "MIT",
    "require": {
        "php": ">=8.1",
        "ext-curl": "*",
        "nelexa/zip": "^4.0"
    },
    "autoload": {
        "psr-4": {
            "FairForge\\Shared\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "FairForge\\Shared\\Tests\\": "tests/"
        }
    },
    "require-dev": {
        "phpunit/phpunit": "^10.0",
        "squizlabs/php_codesniffer": "^3.7"
    },
    "scripts": {
        "lint": "phpcs",
        "lint:fix": "phpcbf",
        "test": "phpunit"
    }
}
