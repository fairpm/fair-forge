#!/usr/bin/env bash

# shellcheck disable=SC2086
source "$(dirname $0)"/../lib/bash/prelude.bash

cd $ASPIREBUILD_BASE_DIR

build_dir=${1:-$(mktemp -d $ASPIREBUILD_BUILDER_DIR/builder.XXXXXXXXXX)}

[[ $build_dir =~ ^/ ]] || build_dir=$ASPIREBUILD_BUILDER_DIR/$build_dir

# This does the trick, but we really want a nix build...
git clone . $build_dir > /dev/null

echo $build_dir
